                    android:id="@+id/btns01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_span="3"
                    android:text="Iniciar Escáneo"/>
            </TableRow>

            <TableRow>
                <Button
                    android:id="@+id/btns02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_span="3"
                    android:text="Copiar Datos\n(Último Escaneo)"/>
            </TableRow>

            <TableRow>
                <Button
                    android:id="@+id/btns03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_span="3"
                    android:text="Copiar Datos"/>
            </TableRow>


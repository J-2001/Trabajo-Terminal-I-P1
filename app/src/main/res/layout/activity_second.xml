                    android:text="Capacidad restante\nde la batería\n(microamperios-hora)"/>

                <TextView
                    android:id="@+id/tvs08"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0"/>

                <TextView
                    android:id="@+id/tvs09"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"

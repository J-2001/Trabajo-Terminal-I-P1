                <TextView
                    android:id="@+id/tvs16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="µA"/>

            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/tvs17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Capacidad restante\nde la batería\n(porcentaje)"/>

                <TextView
                    android:id="@+id/tvs18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0"/>

                <TextView
                    android:id="@+id/tvs19"
                    android:layout_width="wrap_content"

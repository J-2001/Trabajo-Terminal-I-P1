            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/tvs12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Corriente instantánea\nde la batería\n(microamperios)"/>

                <TextView
                    android:id="@+id/tvs13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0"/>

                <TextView
                    android:id="@+id/tvs14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="µA"/>

                <TextView
                    android:id="@+id/tvs15"
                    android:layout_width="wrap_content"

                <TextView
                    android:id="@+id/tvs06"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_span="2"
                    android:text="0"/>

            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/tvs07"
                    android:layout_width="wrap_content"
